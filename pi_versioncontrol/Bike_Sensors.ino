RunningAverage RPM_L_RA(60);
RunningAverage RPM_R_RA(60);
RunningAverage RPM_C_RA(60);
RunningAverage RPM_CRANK_RA(60);
RunningAverage RPM_SHAFT_RA(60);

//////////////////////////////////////////////I2C sensors///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
